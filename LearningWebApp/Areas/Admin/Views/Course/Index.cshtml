@model IEnumerable<Course>
@{
    ViewData["Title"] = "Courses";
}

<div class="container">
    <h2 class="mb-4">Courses</h2>

    <p>
        <a asp-action="Add" class="btn btn-primary">Create New</a>
    </p>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
				<th>Picture</th>
				<th>Title</th>
                <th>Hours</th>
                <th>Price</th>
                <th>Trainer</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
					<td><img width="40" style="border-radius:4px;" src="~/Pictures/@item.Picture" /></td>
					<td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.Hours)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.Trainer.Name)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm ms-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm ms-1">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>