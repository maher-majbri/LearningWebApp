@model IEnumerable<Trainer>
@{
    ViewData["Title"] = "Trainers";
}

<div class="container">

    <a asp-action="Add" class="btn btn-primary my-3">Add new trainer</a>

    <h3>Show all trainers</h3>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Info</th>
                <th>Courses</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var trainer in Model)
            {
                <tr>
                    <td>@trainer.Name</td>
                    <td>@trainer.Info</td>
                    <td>
                        @if (trainer.Courses != null && trainer.Courses.Any())
                        {
                            @foreach (var course in trainer.Courses)
                            {
                                <span class="badge bg-primary me-1">@course.Title</span>
                            }
                        }
                        else
                        {
                            <span>No courses assigned.</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@trainer.Id" class="btn btn-primary btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@trainer.Id" class="btn btn-secondary btn-sm ms-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@trainer.Id" class="btn btn-danger btn-sm ms-1">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>